<!--sidebar-->
<%= render 'layouts/sidebar', user: current_user, book: @book %>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>

  <table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpg", class: 'image' %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
  <% end %>
  </table>
</div>