<!--sidebar-->
<%= render 'layouts/sidebar', user: @book.user, book: @book_side %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>

  <table class="table">
    <tr>
      <td>
        <%= link_to user_path(@book.user.id), class: 'image' do %>
          <%= attachment_image_tag @book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
          <br>
          <%= @book.user.name %>
        <% end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>

      <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to "Destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-danger' %></td>
      <% end %>
    </tr>
  </table>

</div>