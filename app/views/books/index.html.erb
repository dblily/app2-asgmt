<!--error_message-->
<div class="container">
  <%= render 'layouts/error_message', book: @book %>
</div>

<!--sidebar-->
<%= render 'layouts/sidebar', user: current_user, book: @book %>

<div class="col-md-8 offset-md-1">

  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>

  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user.id), class: 'image' do %>
          <%= attachment_image_tag book.user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end  %>
      </td>
      <td><%= book.body %></td>
    </tr>
  <% end %>

  </table>
</div>
